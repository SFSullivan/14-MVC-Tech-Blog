<main>
    <h1>Dashboard</h1>
    <div>
        {{#each posts}}
        <div>
            <div>
                <h4>{{this.title}}</h4>
                <p>{{this.message}}</p>
                <form action="/comment/">
                    <input type="text" name="comment" placeholder="type comment">
                <button>Comment</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
    <form action="/post/" method="post">
        <input type="text" name="title" placeholder="type title"></input>
        <input type="text" name="message" placeholder="message"></input>
        <button>post</button>
    </form>
</main>